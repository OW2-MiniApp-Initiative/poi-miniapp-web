  <div id="modal-lang" class="modal">
    <div>
        <div class="row">
            <div class="col s12">
                <h5><%= i18n.t('lang_modal.title') %></h5>
            </div>
        </div>        
        <div class="row">
            <div class="col s12">
                <div class="collection">
                    <% availableLanguages.forEach((lang) => { %>
                        <% if (lang !== locale) { %>
                        <a class="collection-item" href="/town/<%= lang%>?url=<%= encodeURIComponent(url) %>" title="Relaunch the app in <%= i18n.t(`lang.${lang}`) %>">
                            <%= i18n.t(`lang.${lang}`) %>
                        </a>
                        <% } else { %>
                            <a class="collection-item active" href="#">
                                <%= i18n.t(`lang.${lang}`) %>
                            </a>    
                        <% } %>
                    <% }) %>
                </div>    
            </div>
        </div>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat"><%= i18n.t('lang_modal.close') %></a>
    </div>
  </div>